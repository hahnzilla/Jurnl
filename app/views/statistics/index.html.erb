<script type="text/javascript" src="tiny_mce/tiny_mce.js"></script>
<script type="text/javascript" src="https://www.google.com/jsapi"> </script>
<script> 
  google.load("visualization", "1", {packages:["corechart"]});
  google.setOnLoadCallback(drawChart);
</script>

<%= render 'entries/text_editor' %>
<section class="wrapper">
  <%= render "shared/navbar2" %>
  <%= render "shared/header" %>
  <section class="statistics">
    <div class="cf">
    <% @statistics.each do |key, value|  %>
      <div class="stat-box">
        <h2><%= key.to_s.titleize %></h2>
        <p>Minimum: <%= value[:min] %></p>
        <p>Maximum: <%= value[:max] %></p>
        <p>Average: <%= value[:avg] %></p>
      </div>
    <% end %>
    </div>
    <h2>Most Common Words:</h2>
    <img id="stats-loading" src="assets/stats-loading.gif"/>
  </section>
</section>
