<style>
html {
  background: url('<%= asset_path('background/bg4.png') %>') no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

body {
  background: none;
}
</style>

	<section class="wrapper form">
		<header>
			<h2>Sign up</h2>
		</header>
		<div class="entrance cf">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: "new_user", id: "new_user") do |f| %>
			  <%= devise_error_messages! %>

			  <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>

			  <%= f.password_field :password, :placeholder => "Password" %>

			  <%= f.password_field :password_confirmation, :placeholder => "Retype Password" %>

			  <%= f.submit "Sign up", :class => "button" %>
			<% end %>
		</div>
	</section>

	<%= render "devise/shared/links" %>


