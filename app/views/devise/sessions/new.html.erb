<style>
html {
  background: url("/images/background/bg4.png") no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

body {
  background: none;
}
</style>
<section class="wrapper form">
  <header>
    <h1>journal</h1>
  </header>
  <div class="entrance cf">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "SigninForm") do |f| %>

      <%= f.email_field :email, :placeholder => "Email", :autofocus => true %>

      <%= f.password_field :password, :placeholder => "Password" %>

      <div class="remember">
      <% if devise_mapping.rememberable? -%>
        <%= f.label :remember_me, "Remember Me?" %>
        <%= f.check_box :remember_me %>
      <% end -%>
      </div>

      <%= f.submit "Sign In" , :class => "button"  %>
    <% end %>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: "SignupForm") do |f| %>
      <%= devise_error_messages! %>

      <%= f.email_field :email, :placeholder => "Email" %>

      <%= f.password_field :password, :placeholder => "Password" %>

      <%= f.password_field :password_confirmation, :placeholder => "Retype Password" %>

      <%= f.submit "Sign Up" , :class => "button" %>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</section>