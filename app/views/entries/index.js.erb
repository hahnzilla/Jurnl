$('.entries').append('<%= escape_javascript render(@entries) %>');
<% if @entries.next_page %>
  $('.pagination').replaceWith('<%= escape_javascript will_paginate(@entries) %>');
<% else %>
  $('.pagination').remove();
<% end %>
$(".entry").each(function(){
  if($(this).height() > 260){
    $(this).addClass("expandable");
    $(this).on('click', function(){
      $(this).toggleClass("expanded", 200);
    });
  }
});
