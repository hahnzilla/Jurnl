<h1>Settings#edit</h1>
<p>Find me in app/views/settings/edit.html.erb</p>

attr_accessible :bg_color_hex, :font_color_hex, :font_point, :goal_duration, :goal_word_count

<%= form_for :user, url: settings_path(@settings.id), method: :patch do |f| %>
  <p>
    <%= f.label :bg_color_hex %><br>
    <%= f.text_field :bg_color_hex %>
  </p>
 
  <p>
    <%= f.label :font_color_hex %><br>
    <%= f.text_area :font_color_hex %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', settings_path%>